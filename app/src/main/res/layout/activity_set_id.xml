<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetIDActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณาระบุ ID Smart Key">
    </TextView>

    <EditText
        android:layout_above="@id/id"
        android:layout_marginTop="10dp"
        android:id="@+id/name"
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#EBEBEB"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Name"
        android:inputType="text"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/id"
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#EBEBEB"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="ID"
        android:inputType="number"
        />

    <TextView
        android:layout_marginStart="20dp"
        android:id="@+id/vaild"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id"
        android:layout_below="@id/id"
        android:textColor="#ff0000"
        android:text="* 1 ID can register per 1 name only!">
    </TextView>

    <Button
        android:textSize="20dp"
        android:id="@+id/ok"
        android:background="@drawable/success_button"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/vaild"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="OK">
    </Button>

    <ProgressBar
        android:id="@+id/reg_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ok"
        android:layout_alignBottom="@id/ok"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>